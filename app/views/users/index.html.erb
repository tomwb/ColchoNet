<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= user.location %></td>
        <td><%= user.email %></td>
        <td><%= link_to  t('users.show.title'), user %></td>
        <td><%= link_to  t('users.edit.title'), edit_user_path(user) %></td>
        <td><%= link_to  t('links.destroy'), user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('users.new.title'), new_user_path %>
<%= link_to t('links.back'), users_path %>
<%= link_to t('links.home'), root_path %>
